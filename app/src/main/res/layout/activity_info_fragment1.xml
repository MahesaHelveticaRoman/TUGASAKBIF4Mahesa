<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.info.InfoFragment1">
    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INFORMASI"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="24dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="301dp"
        android:layout_height="262dp"
        android:layout_below="@+id/txtJudul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />
    <TextView
        android:id="@+id/txtinfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mau buku catatan yang mudah digunakan untuk mencatat cepat?"
        android:layout_below="@+id/logo"
        android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/txtinfo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini memiliki fokus utama pada pembuatan dan manajemen catatan, memungkinkan Anda untuk menjaga ide, pemikiran, rencana, dan detail penting lainnya tetap teratur dan mudah dijangkau."
        android:layout_below="@+id/txtinfo1"
        android:textAlignment="textStart"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Halaman Selanjutnya ->"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_centerInParent="true"/>

</RelativeLayout>